<% unless session[:current_tab] == 'Archives' %>
	<div class="span-24">
		<ul id="crumbs">
			<li><%= link_to 'Patients', patients_path %></li>
			<li><%= link_to 'Cases', patient_accidents_path(@patient) %></li>
		</ul>
	</div>
<% end %>

<% unless notice.blank? %>
	<div class="span-20 notice">
		<%= notice %>
	</div>
<% end %>

<%= render :partial => 'details' %>

<hr class="space"/>

<% if session[:current_tab] == 'Archives' %>
	<div class="span-24">
		<%= link_to 'Back', archives_accidents_path, :class => 'button' %>
	</div>
<% else %>
	<div class="span-24">
		<div class="span-3">
			<%= link_to 'Back', patient_accidents_path(@patient), :class => 'button' %>
		</div>
	
		<div class="prepend-18 span-3 last">
			<%= link_to 'Edit', edit_patient_accident_path(@patient, @accident), :class => 'button' %>
		</div>
	</div>
<% end %>