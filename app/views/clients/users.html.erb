<div class="span-24">
	<ul id="crumbs">
		<li><%= link_to 'Clients', clients_path %></li>
	</ul>
</div>

<div class="span-24">	
	<table class="advanced">
	  <thead>
    <th class="span-9">Name</th>
    <th class="span-6">E-mail</th>
    <th class="span-4">Role</th>
		<th class="span-5 last"></th>
  </thead>

	<% @users.each do |user| %>
 	 	<tr>
	    <td><%= user.name %></td>
	    <td><%= user.email %></td>
	    <td><%= user.role.name %></td>
	    <td><%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Archive', user, confirm: "Are you sure you want to archive this user?", method: :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>

<hr class="space"/>

<div class="span-24">
	<%= paginate @users %>
</div>

<br/>

<div class="span-24">
	<div class="span-3">
		<%= link_to 'Back', clients_path, :class => 'button' %>
	</div>
	
	<div class="prepend-18 span-3 last">
		<%= link_to 'New User', new_external_users_path(:client_id => params[:id]), :class => 'button positive' %>
	</div>
</div>
