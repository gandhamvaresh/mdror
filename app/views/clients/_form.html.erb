<div class="span-24">
	<%= form_for(@client) do |f| %>
	
		<%= render "shared/error_messages", :target => @client %>
	
	  <div class="span-24">
			<div class="span-12">
				<%= f.label :name %><br />
		    <%= f.text_field :name, :class => 'title' %>
			</div>
			<div class="span-12 last">
				<%= f.label :address_line1 %><br />
		    <%= f.text_field :address_line1, :class => 'title' %>
			</div>
	  </div>
	
		<hr class="space"/>
		
	 	<div class="span-24">
			<div class="span-12">
		    <%= f.label :address_line2 %><br />
		    <%= f.text_field :address_line2, :class => 'title' %>
		  </div>
		  <div class="span-12 last">
		    <%= f.label :city %><br />
		    <%= f.text_field :city, :class => 'title' %>
		  </div>
  	</div>

		<hr class="space"/>
		
		<div class="span-24">
	  	<div class="span-12">
		    <%= f.label :state %><br />
		    <%= f.text_field :state, :class => 'title' %>
			</div>

		 <div class="span-12 last">
		    <%= f.label :zip %><br />
		    <%= f.text_field :zip, :class => 'title' %>
		  </div>
		</div>

		<hr class="space"/>
		
	  <div class="span-24">
			<div class="span-12">
		    <%= f.label :phone %><br />
		    <%= f.text_field :phone, :class => 'title' %>
		 	</div>

 			<div class="span-12 last">
			    <%= f.label :fax %><br />
			    <%= f.text_field :fax, :class => 'title' %>
			 </div>
  	</div>
	
		<hr class="space"/>
		
		<div class="span-24">
			<div class="span-12 last">
				<%= f.label :claim_recipient_email %><br />
				<%= f.text_field :claim_recipient_email, :class => 'title' %>
			</div>
		</div>
		
		<hr class="space"/>

		<div class="span-24">
			<%= f.label :report_header %><br />
			<%= f.file_field :report_header %>
		</div>
		
		<% if @client.report_header.exists? %>
			<hr class="space"/>
			
			<div class="span-24">
				<%= image_tag @client.report_header.url(:banner) %> <br/>
				<%= check_box_tag :remove_report_header %>&nbsp;Remove report header
			</div>
		
		<% end %>
		
		<hr class="space"/>
		
	 	<div class="span-24">
			<div class="span-3">
				<%= link_to 'Back', clients_path, :class => 'button' %>
			</div>
			<div class="prepend-14 span-3 last">
					<br/>
		    	<%= f.submit %>
			</div>
  	</div>
	
	<% end %>
</div>