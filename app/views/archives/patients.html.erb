<h4>Patients Archive</h4>

<div class="span-24">	
	<table class="advanced">
	  <thead>
	    <th class="span-5">Name</th>
	    <th class="span-2">Age</th>
		<th class="span-2">Gender</th>
	    <th class="span-3">Cell Phone</th>
	    <th class="span-4">Occupation</th>
	    <th class="span-2">Handed</th>
		<th class="span-2">Height</th>
		<th class="span-2">Weight</th>
		<th class="span-2"></th>
    </thead>

		<tbody>
			<% @patients.each do |patient| %>
			  <tr>
			    <td><%= patient.full_name %></td>
			    <td><%= patient.age %> yrs</td>
				<td><%= patient.gender %></td>
			    <td><%= patient.cell_phone %></td>
			    <td><%= patient.occupation %></td>
			    <td><%= patient.handed %></td>
			    <td><%= patient.height %> inches</td>
			    <td><%= patient.weight %> lbs</td>
			    <td><%= link_to 'Unarchive', patient, confirm: 'Are you sure you want to unarchive this patient? All related cases, chiropractic examinations and chiropractic treatment notes will also be unarchived.', method: :delete %>
					</td>
			  </tr>
			<% end %>
		</tbody>
	</table>

</div>

<hr class="space"/>

<div class="span-24">
	<%= paginate @patients %>
</div>

<br/>

<div class="prepend-21 span-3">
	<%= link_to 'Back', archives_index_path, :class => 'button' %>
</div>

