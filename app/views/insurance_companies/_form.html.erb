<div class="span-24">
	<%= form_for(@insurance_company) do |f| %>
	
		<%= render "shared/error_messages", :target => @insurance_company %>
	
	  <div class="span-24">
			<div class="span-12">
				<%= f.label :name %><br />
		    <%= f.text_field :name, :class => 'title' %>
			</div>
			<div class="span-12 last">
				<%= f.label :address_line1 %><br />
		    <%= f.text_field :address_line1, :class => 'title' %>
			</div>
	  </div>
	
		<hr class="space"/>
		
	 	<div class="span-24">
			<div class="span-12">
		    <%= f.label :address_line2 %><br />
		    <%= f.text_field :address_line2, :class => 'title' %>
		  </div>
		  <div class="span-12 last">
		    <%= f.label :city %><br />
		    <%= f.text_field :city, :class => 'title' %>
		  </div>
  	</div>

		<hr class="space"/>
		
		<div class="span-24">
	  	<div class="span-12">
		    <%= f.label :state %><br />
		    <%= f.text_field :state, :class => 'title' %>
			</div>

		 <div class="span-12 last">
		    <%= f.label :zip %><br />
		    <%= f.text_field :zip, :class => 'title' %>
		  </div>
		</div>

		<hr class="space"/>
		
	  <div class="span-24">
			<div class="span-12">
		    <%= f.label :phone %><br />
		    <%= f.text_field :phone, :class => 'title' %>
		 	</div>

 			<div class="span-12 last">
			    <%= f.label :fax %><br />
			    <%= f.text_field :fax, :class => 'title' %>
			 </div>
  	</div>
	
		<hr class="space"/>
		
	 	<div class="span-24">
			<div class="span-3">
				<%= link_to 'Back', insurance_companies_path, :class => 'button' %>
			</div>
			<div class="prepend-13 span-3 last">
					<br/>
		    	<%= f.submit %>
			</div>
  	</div>
	
	<% end %>
</div>
