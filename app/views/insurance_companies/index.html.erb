<div class="span-24">	
	<table class="advanced">
	  <thead>
    <th class="span-7">Name</th>
    <th class="span-4">City</th>
    <th class="span-2">State</th>
    <th class="span-3">Phone</th>
    <th class="span-8"></th>
  </thead>

	<tbody>
		<% @insurance_companies.each do |insurance_company| %>
		  <tr>
		    <td><%= insurance_company.name %></td>
		    <td><%= insurance_company.city %></td>
		    <td><%= insurance_company.state %></td>
		    <td><%= insurance_company.phone %></td>
		    <td><%= link_to 'Show', insurance_company %> | <%= link_to 'Edit', edit_insurance_company_path(insurance_company) %> | <%= link_to 'Archive', insurance_company, confirm: "Are you sure you want to archive this insurance company. Clients cannot select this insurance company for future patients?", method: :delete %></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<hr class="space"/>

<div class="span-24">
	<%= paginate @insurance_companies %>
</div>

<br/>

<div class="prepend-19 span-5">
<%= link_to 'New Insurance Company', new_insurance_company_path, :class => 'button positive' %>
</div>