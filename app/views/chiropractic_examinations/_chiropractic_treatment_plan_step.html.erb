<div class="span-24">
	<%= f.fields_for :chiropractic_treatment_plan do |builder| %>
	
		<div class="span-24">
			<span style="text-decoration:underline; font-weight:bold;">RECOMMENDED TREATMENT PLAN:</span>
		</div>
		
		<div class="span-24">	
			<%= builder.check_box :spine_xray, :disabled => disable_option %>&nbsp;X-ray of&nbsp;&nbsp;<%= builder.check_box :spine_xray_cervical, :disabled => disable_option %>&nbsp;Cervical&nbsp;&nbsp;<%= builder.check_box :spine_xray_thoracic, :disabled => disable_option %>&nbsp;Thoracic&nbsp;&nbsp;<%= builder.check_box :spine_xray_lumbar, :disabled => disable_option %>&nbsp;Lumbar&nbsp;&nbsp;spine due to history of trauma. <br/>
			&nbsp;&nbsp;Other X-ray:&nbsp;&nbsp;<%= builder.text_field :other_xray, :class => "small_font_span_8", :disabled => disable_option %>
		</div>
		
		<div class="span-24">
			<%= builder.check_box :need_xray_reports, :disabled => disable_option %>&nbsp;Obtain X-ray reports from hospital and / or previous treating facility
		</div>
		
		<div class="span-24">
			<%= builder.check_box :need_past_medical_records, :disabled => disable_option %>&nbsp;Advised patient to obtain past medical records for review
		</div>
		
		<div class="span-24">
			<%= builder.check_box :spinal_adjustments, :disabled => disable_option %>&nbsp;Spinal Adjustments:&nbsp;&nbsp;<%= builder.select :spinal_adjustments_frequency, [['3x/wk', '3x/wk'], ['2x/wk', '2x/wk'], ['1x/wk', '1x/wk']], {:prompt => "None"}, :disabled => disable_option %>
		</div>
		
		<div class="span-24">
			<%= builder.check_box :extremity_adjustments, :disabled => disable_option %>&nbsp;Extremity Adjustments:&nbsp;&nbsp;<%= builder.select :extremity_adjustments_frequency, [['3x/wk', '3x/wk'], ['2x/wk', '2x/wk'], ['1x/wk', '1x/wk']], {:prompt => "None"}, :disabled => disable_option %>&nbsp;To:&nbsp;&nbsp;<%= builder.text_field :extremity_adjustment_body_part, :class => "small_font_span_6", :disabled => disable_option %>
		</div>
			
		<label>Modalities:</label><br/>
				
		<div class="span-24">
			<%= builder.check_box :ultrasound, :disabled => disable_option %>&nbsp;Ultrasound
		</div>
		
		<div class="span-24">
			<%= builder.check_box :electric_stimulation, :disabled => disable_option %>&nbsp;Electric Stimulation
		</div>
		
		<div class="span-24">
			<%= builder.check_box :massage, :disabled => disable_option %>&nbsp;Massage
		</div>
		
		<div class="span-24">
			<%= builder.check_box :mfr_cervical, :disabled => disable_option %>&nbsp;MFR Cervical
		</div>

		<div class="span-24">
			<%= builder.check_box :mfr_thoracic, :disabled => disable_option %>&nbsp;MFR Thoracic
		</div>
		
		<div class="span-24">
			<%= builder.check_box :mfr_lumbar, :disabled => disable_option %>&nbsp;MFR Lumbar
		</div>
		
		<div class="span-24">
			<%= builder.check_box :mechanical_traction, :disabled => disable_option %>&nbsp;Mechanical Traction
		</div>
		
		<div class="span-24">
			<%= builder.check_box :infrared, :disabled => disable_option %>&nbsp;Infrared
		</div>
		
		<div class="span-24">
			<%= builder.check_box :hot_cold_pack, :disabled => disable_option %>&nbsp;Hot/Cold Pack
		</div>
		
		<div class="span-24">
			<%= builder.check_box :bio_feedback, :disabled => disable_option %>&nbsp;Bio-Feedback
		</div>
		
		<div class="span-24">
			<%= builder.check_box :self_care_home_mgmt, :disabled => disable_option %>&nbsp;Self Care/Home MGMT
		</div>
		
		<div class="span-24">
			<%= builder.check_box :therapeutic_exercises, :disabled => disable_option %>&nbsp;Therapeutic Exercises
		</div>
		
		<div class="span-24">
			<%= builder.check_box :therapeutic_functional_activities, :disabled => disable_option %>&nbsp;Therapeutic/Functional Activities
		</div>
		
		<div class="span-24">
			Other Modality:&nbsp;&nbsp;<%= builder.text_field :other_therapeutic_modality, :class => "small_font_span_8", :disabled => disable_option %>
		</div>
		
		<div class="span-24">
			<%= builder.check_box :recommend_medical_consultation, :disabled => disable_option %>&nbsp;Recommend Medical consultation for evaluation of&nbsp;&nbsp;<%= builder.text_field :recommended_medical_evaluation, :class => "small_font_span_6", :disabled => disable_option %>
		</div>
		
		<div class="span-24">
			<%= builder.check_box :re_examine_in_4_weeks, :disabled => disable_option %>&nbsp;Re-examine in approximately 4 weeks
		</div>
		
		<div class="span-24">	
			<%= builder.check_box :spine_mri, :disabled => disable_option %>&nbsp;Consider MRI of&nbsp;&nbsp;<%= builder.check_box :spine_mri_cervical, :disabled => disable_option %>&nbsp;Cervical&nbsp;&nbsp;<%= builder.check_box :spine_mri_thoracic, :disabled => disable_option %>&nbsp;Thoracic&nbsp;&nbsp;<%= builder.check_box :spine_mri_lumbar, :disabled => disable_option %>&nbsp;Lumbar&nbsp;&nbsp;spine if radiating symptoms persist. <br/>
			&nbsp;&nbsp;Other MRI:&nbsp;&nbsp;<%= builder.text_field :other_mri, :class => "small_font_span_8", :disabled => disable_option %>
		</div>
		
		<div class="span-24">	
			<%= builder.check_box :spine_ct_scan, :disabled => disable_option %>&nbsp;Consider CT Scan of&nbsp;&nbsp;<%= builder.check_box :spine_ct_scan_cervical, :disabled => disable_option %>&nbsp;Cervical&nbsp;&nbsp;<%= builder.check_box :spine_ct_scan_thoracic, :disabled => disable_option %>&nbsp;Thoracic&nbsp;&nbsp;<%= builder.check_box :spine_ct_scan_lumbar, :disabled => disable_option %>&nbsp;Lumbar&nbsp;&nbsp;spine if radiating symptoms persist. <br/>
			&nbsp;&nbsp;Other CT Scan:&nbsp;&nbsp;<%= builder.text_field :other_ct_scan, :class => "small_font_span_8", :disabled => disable_option %>
		</div>
		
		<div class="span-24">
			<%= builder.check_box :pending_medical_clearance_for_medications, :disabled => disable_option %>&nbsp;No Chiropractic treatment recommended at this time pending medical clearance
		</div>
			
		<hr class="space"/>
					
		<div class="span-24">
			Other Recommendations:<br/><%= builder.text_area :other_recommendations, :class => "text_area_span_14", :disabled => disable_option %>
		</div>	
	<% end %>
</div>