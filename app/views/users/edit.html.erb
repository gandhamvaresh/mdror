<div class="span-24">

<%= form_for @user do |f| %>

  <%= render "shared/error_messages", :target => @user %>

	<div class="span-24">
		<div class="span-12">
			<%= f.label :name %><br />
	    <%= f.text_field :name, :class => 'title' %>
		</div>
		<div class="span-12 last">
			<%= f.label :email %><br />
	    <%= f.text_field :email, :class => 'title' %>
		</div>
	</div>
	
	<hr class="space"/>
	
	<a href="javascript:togglePasswordFields();" class="button" id="toggle_link">Change Password</a>
	
	<hr class="space"/>
	
	<div class="span-24" id="password_fields" style="display:none;">
		<div class="span-12">
			<%= f.label :password %><br />
	    <%= f.password_field :password, :class => 'title' %>
		</div>
		<div class="span-12 last">
			<%= f.label :password_confirmation %><br />
	    <%= f.password_field :password_confirmation, :class => 'title' %> <br/>
		</div>
		<span class="quiet">* If you leave the password fields blank, the user's current password is not changed. Enter a new password and confirmation, if you want to change the password for this user.</span>
		<hr class="space"/>
	</div>

	<div class="span-24">
		<%= f.label :digital_signature %><br />
		<%= f.file_field :digital_signature %>
	</div>
	
	<% if @user.digital_signature.exists? %>
		<hr class="space"/>
		
		<div class="span-24">
			<%= image_tag @user.digital_signature.url(:short) %> <br/>
			<%= check_box_tag :remove_digital_signature %>&nbsp;Remove digital signature
		</div>
	
	<% end %>
	
	<hr class="space"/>
	
	<div class="span-24">
		<div class="span-3">
			<%= link_to 'Back', users_path, :class => 'button' %>
		</div>
		<div class="prepend-15 span-3 last">
				<br/>
	    	<%= f.submit %>
		</div>
  </div>

<% end %>

</div>

<script type="text/javascript" charset="utf-8">
	function togglePasswordFields() {
		$("#password_fields").toggle();
		
		if ($("#password_fields").is(":visible")) {
			$("#toggle_link").text('Hide Password Fields');
		} else {
			$("#toggle_link").text('Change Password');
		}
	}
</script>