<div class="span-24">	
	<table class="advanced">
	  <thead>
    <th class="span-9">Name</th>
    <th class="span-6">E-mail</th>
    <th class="span-4">Role</th>
		<th class="span-5 last"></th>
  </thead>

	<% @users.each do |user| %>
 	 	<tr>
	    <td><%= user.name %></td>
	    <td><%= user.email %></td>
	    <td><%= user.role.name %></td>
	    <td><%= link_to 'Edit', edit_user_path(user) %> | <%= link_to 'Archive', user, confirm: "Are you sure you want to archive this user?", method: :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>

<hr class="space"/>

<div class="span-24">
	<%= paginate @users %>
</div>

<br/>

<div class="prepend-21 span-3">
	<%= link_to 'New User', new_user_path, :class => 'button positive' %>
</div>
	
