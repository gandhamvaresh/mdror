<div class="span-24">

<%= form_for @user do |f| %>

  <%= render "shared/error_messages", :target => @user %>

	<div class="span-24">
		<div class="span-12">
			<%= f.label :name %><br />
	    <%= f.text_field :name, :class => 'title' %>
		</div>
		<div class="span-12 last">
			<%= f.label :email %><br />
	    <%= f.text_field :email, :class => 'title' %>
		</div>
	</div>
	
	<hr class="space"/>
	
	<div class="span-24">
		<div class="span-12">
			<%= f.label :password %><br />
	    <%= f.password_field :password, :class => 'title' %>
		</div>
		<div class="span-12 last">
			<%= f.label :password_confirmation %><br />
	    <%= f.password_field :password_confirmation, :class => 'title' %>
		</div>
	</div>
  
	<hr class="space"/>

	<div class="span-24">
		<%= f.label :role %><br />
		<%= f.collection_select(:role_id, Role.internal, :id, :name) %>
	</div>
	
	<hr class="space"/>
	
	<div class="span-24">
		<div class="span-3">
			<%= link_to 'Back', users_path, :class => 'button' %>
		</div>
		<div class="prepend-15 span-3 last">
				<br/>
	    	<%= f.submit %>
		</div>
  </div>

<% end %>

</div>